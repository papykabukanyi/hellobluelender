.next
out
dist
build
*.tsbuildinfo

# Development files
node_modules
npm-debug.log
yarn-debug.log
yarn-error.log
.pnpm-debug.log
.DS_Store
*.pem

# Testing
coverage
.nyc_output

# Debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Local env files
.env
.env.*
.env.local
.env.development.local
.env.test.local
.env.production.local
.env.railway
!.env.example
!.env.example.railway

